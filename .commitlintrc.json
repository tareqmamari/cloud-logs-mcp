{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "api",
        "auth",
        "ci",
        "client",
        "config",
        "deps",
        "docs",
        "main",
        "metrics",
        "observability",
        "query",
        "release",
        "server",
        "session",
        "tools",
        "validator"
      ]
    ],
    "subject-case": [0],
    "header-max-length": [2, "always", 100],
    "body-max-line-length": [2, "always", 200]
  }
}
